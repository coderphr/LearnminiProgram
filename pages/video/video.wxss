/* pages/video/video.wxss */
.header {
  display: flex;
  padding: 10rpx;
}
.header .search {
  flex: 1;
  margin: 0 10rpx;
  border: 1rpx solid #eee;
  font-size: 30rpx;
  text-align: center;
  line-height: 50rpx;
  color: #d43c33;
}
.header .image {
  width: 50rpx;
  height: 50rpx;
}

.tabbar_scroll {
  height: 60rpx;
  display: flex;
  white-space: nowrap;
}
.tabbar_scroll .scroll_item {
  padding: 0 10rpx;
  margin: 0 10rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  border: 1rpx solid #eee;
}

.tabbar_scroll .active {
  border: 1rpx solid #d43c33;
  color: #d43c33;
}
.video_scroll {
  margin-top: 10rpx;
  height: calc(100vh - 153rpx);
}

.scroll_item {
  padding: 0 3%;
}
.scroll_item .common{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.scroll_item .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}
.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}