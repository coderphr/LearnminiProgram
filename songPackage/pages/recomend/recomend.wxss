/* pages/recomend/recomend.wxss */
.header {
  position: relative;
}
.header image {
  position: relative;
  height: 300rpx;
}
.header .date {
  position: absolute;
  left: 51%;
  top: 55%;
  transform: translate(-50%,-50%);
  font-size: 50rpx;
  color: #ffffff;
}
.header .date .mounth {
  font-size: 70rpx;
  font-weight: bold;
}

.listContainer .header {
  position: relative;
  top: -20rpx;
  padding: 0 10rpx;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.listScroll {
  height: calc(100vh - 353rpx);
}

.scrollItem {
  display: flex;
  height: 100rpx;
  margin: 20rpx 20rpx;
}
.scrollItem image {
  width: 80rpx;
  height: 100%;
  border-radius: 10rpx;
}

.scrollItem .musicInfo {
  margin-left: 20rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: flex-start;
  font-size: 25rpx;
}
.scrollItem .iconfont {
  position: absolute;
  right: 0; 
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}